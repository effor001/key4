           y: 0,\n        }),\n        methods: {\n            setNewCords: function (event) {\n                this.x = event.pageX;\n                this.y = event.pageY;\n            },\n            getCurrentRadius: function () {\n                if (this.isHover !== true)\n                    return this.radius;\n                return this.hoverRadius;\n            },\n            calcCords: function () {\n                return {\n                    top: (this.y - (this.getCurrentRadius() / 2)) + 'px',\n                    left: (this.x - (this.getCurrentRadius() / 2)) + 'px',\n                }\n            },\n            getCurrentStyles: function () {\n                const radius = this.getCurrentRadius() + 'px';\n                const styled = {\n                    width: radius,\n                    height: radius,\n                    ...this.calcCords()\n                };\n                return styled;\n            }\n        }\n    };\n</script>\n<style>\n.MouseCursor {\n    cursor: none;\n}\n\n.MouseCursor .MouseCursorElement {\n    position: fixed;\n    background: #fff;\n    border-radius: 50%;\n    mix-blend-mode: difference;\n    z-index: 999;\n}\n\n.MouseCursor .MouseCursorElement.isAnimated {\n    transition-duration: 250ms;\n    transition-timing-function: ease-out;\n    transition-property: all;\n    transform: translate(-50%, -50%);\n}\n</style>\n"]}]}